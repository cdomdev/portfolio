---
import Layout from "@/layouts/Layout.astro";
import Card from "@/components/Card.astro";
import { proyectos } from "@/content/content";
---

<Layout title="Proyectos">
  <main>
    <section
      id="#proyectos"
      class="mt-20 w-full md:max-w-4xl md:mx-auto px-6 min-h-dvh"
    >
      <h1
        class="text-2xl gap-1 mb-10 items-center text-center text-black font-semibold dark:text-white md:text-3xl hover:text-slate-200 duration-300 flex"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon icon-tabler icons-tabler-outline icon-tabler-code size-7"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M7 8l-4 4l4 4"></path><path d="M17 8l4 4l-4 4"></path><path
            d="M14 4l-4 16"></path></svg
        >
        Proyectos
      </h1>
      <div
        class="flex flex-col whitespace-nowrap m-auto flex-wrap justify-start"
      >
        {
          proyectos.map((proyecto) => (
            <Card
              titulo={proyecto.tittle}
              texto={proyecto.text}
              img={proyecto.img}
              url={proyecto.url}
              urlCodigo={proyecto.urlCodigo}
            />
          ))
        }
      </div>
    </section>
  </main>
</Layout>
