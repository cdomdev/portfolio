---
interface Props {
    text: string;
}

const { text} = Astro.props;
---

<div
    class="slide w-30 h-15 flex flex-row bg-white items-center justify-center rounded-md shadow-xl dark:shadow-slate-700 dark:hover:shadow-slate-800 hover:shadow-sm transition-shadow ease-out duration-200 py-2 px-4"
>
    <slot/>
    <p class="text-black text-md ml-1">{text}</p>
</div>
