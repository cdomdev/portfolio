---
import Layout from "@/layouts/Layout.astro";
import Slider from "@/components/Slider.astro";
import Educacion from "@/components/Educacion.astro";
import Book from "@/components/icons/Book.astro";
---

<Layout title="Habilidades">
    <main>
        <section id="#profile" class="pt-32 max-w-2xl mx-auto px-6 min-h-dvh">
            <h1
                class="text-2xl gap-1 items-center text-center text-black font-semibold dark:text-custom-color md:text-3xl hover:text-slate-200 duration-300 flex">
                Habilidades
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    x-bind:width="size"
                    x-bind:height="size"
                    viewBox="0 0 24 24"
                    fill="none"
                    class="size-6"
                    stroke="currentColor"
                    x-bind:stroke-width="stroke"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    width="20"
                    height="20"
                    stroke-width="2">
                    <path d="M8 9l3 3l-3 3"></path>
                    <path d="M13 15l3 0"></path>
                    <path
                        d="M3 4m0 2a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2z"
                    ></path>
                </svg>
            </h1>
            <Slider />
            <h2
                class="text-lg text-center text-black font-semibold dark:text-custom-color md:text-2xl hover:text-slate-200 duration-300 flex">
                Estudios
                <Book />
            </h2>
            <Educacion />
        </section>
    </main>
</Layout>
