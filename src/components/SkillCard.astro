---
interface Props {
    text: string;
    icon: any;
}

const { text, icon: Icon } = Astro.props;
---

<div
    class="slide w-30 h-15 flex flex-row bg-[#ccc] text-white dark:bg-white items-center justify-center rounded-md shadow-sm transition-shadow ease-out duration-200 py-2 px-4">
    <Icon class="w-6 h-6" />
    <p class="text-black dark:text-white text-md ml-1">{text}</p>
</div>
