---
import Educacion from "../Educacion.astro";
import Slider from "../Slider.astro";
---

<section class="pt-20">
  <h1
    class="text-2xl gap-1 items-center mb-10 text-center text-black font-semibold dark:text-white md:text-3xl hover:text-slate-200 duration-300 flex"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      x-bind:width="size"
      x-bind:height="size"
      viewBox="0 0 24 24"
      fill="none"
      class="size-6"
      stroke="currentColor"
      x-bind:stroke-width="stroke"
      stroke-linecap="round"
      stroke-linejoin="round"
      width="20"
      height="20"
      stroke-width="2"
    >
      <path d="M8 9l3 3l-3 3"></path>
      <path d="M13 15l3 0"></path>
      <path
        d="M3 4m0 2a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2z"
      ></path>
    </svg>
    Habilidades
  </h1>
  <Slider />
  <h3
    class="text-lg text-center pt-4 text-black font-semibold dark:text-white md:text-2xl hover:text-slate-200 duration-300 flex items-center"
  >
    Estudios
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="icon icon-tabler icon-tabler-book ml-2 size-7"
      width="35"
      height="35"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="#ffffff"
      fill="none"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
      <path d="M3 19a9 9 0 0 1 9 0a9 9 0 0 1 9 0"></path>
      <path d="M3 6a9 9 0 0 1 9 0a9 9 0 0 1 9 0"></path>
      <path d="M3 6l0 13"></path>
      <path d="M12 6l0 13"></path>
      <path d="M21 6l0 13"></path>
    </svg>
  </h3>
  <Educacion />
</section>
